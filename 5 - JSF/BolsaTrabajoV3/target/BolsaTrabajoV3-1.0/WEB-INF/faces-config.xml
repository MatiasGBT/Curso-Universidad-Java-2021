<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    
    <lifecycle>
        <phase-listener>
            beans.lifecycle.DebuggerListener
        </phase-listener>
    </lifecycle>
        
    <application>
        <locale-config>
            <default-locale>es</default-locale> <!--Idioma por default-->
        </locale-config>
        <resource-bundle>
            <base-name>mensajes</base-name> <!--Es el archivo mensajes.properties ubicado en Other Sources-->
            <var>msgs</var>
        </resource-bundle>
        <message-bundle>jsf</message-bundle> <!--Es el archivo jsf.properties ubicado en Other Sources-->
    </application>

</faces-config>